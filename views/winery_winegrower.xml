<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Tree view -->
    <record id="view_winery_winegrower_tree" model="ir.ui.view">
        <field name="name">winery.winegrower.tree</field>
        <field name="model">winery.winegrower</field>
        <field name="arch" type="xml">
            <tree string="Winegrowers">
                <field name="code"/>
                <field name="name"/>
                <field name="vat"/>
                <field name="phone"/>
                <field name="email"/>
                <field name="country_id"/>
                <field name="state_id"/>
                <field name="city"/>
            </tree>
        </field>
    </record>

    <!-- Form view -->
    <record id="view_winery_winegrower_form" model="ir.ui.view">
        <field name="name">winery.winegrower.form</field>
        <field name="model">winery.winegrower</field>
        <field name="arch" type="xml">
            <form string="Winegrower">
                <sheet>

                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>

                    <group>
                        <group string="General">
                            <field name="code"/>
                            <field name="vat"/>
                        </group>
                        <group string="Contact">
                            <field name="phone"/>
                            <field name="email"/>
                        </group>
                    </group>

                    <group string="Address">
                        <field name="street"/>
                        <field name="city"/>
                        <field name="zip"/>
                        <field name="country_id"/>
                        <field name="state_id"/>
                    </group>

                    <group string="Notes">
                        <field name="description"/>
                    </group>

                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_winery_winegrower" model="ir.actions.act_window">
        <field name="name">Winegrowers</field>
        <field name="res_model">winery.winegrower</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_winery_root"
              name="Winery"
              sequence="10"/>

    <menuitem id="menu_winery_winegrower"
              name="Winegrowers"
              parent="menu_winery_root"
              action="action_winery_winegrower"
              sequence="10"/>

</odoo>
