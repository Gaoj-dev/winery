<odoo>
    <data>
        <record id="view_winery_weighing_form" model="ir.ui.view">
            <field name="name">winery.weighing.form</field>
            <field name="model">winery.weighing</field>
            <field name="arch" type="xml">
                <form string="Ficha de Pesada">
                    <sheet>
                        <div class="oe_title">
                            <h1><field name="name"/></h1>
                        </div>
                        <group>
                            <group string="Datos del Viticultor">
                                <field name="winegrower_id"/>
                                <field name="winegrower_code"/>
                                <field name="grape_variety_id" options="{'no_create': True}"/>
                                <field name="parcel_ids" widget="many2many_tags" 
                                       options="{'no_create': True}"/>
                            </group>
                            <group string="Detalles de Entrada">
                                <field name="date"/>
                                <field name="is_table_wine"/>
                                <field name="alcohol_degree"/>
                            </group>
                        </group>
                        
                        <group string="Pesaje (Kg)">
                            <group>
                                <field name="gross_weight"/>
                                <field name="tare_weight"/>
                                <field name="net_weight" class="oe_subtotal_footer_separator"/>
                            </group>
                        </group>

                        <separator string="OBSERVACIONES"/>
                        <field name="description" placeholder="Escriba aquí sus notas..." nolabel="1"/>
                        
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_winery_weighing_tree" model="ir.ui.view">
            <field name="name">winery.weighing.tree</field>
            <field name="model">winery.weighing</field>
            <field name="arch" type="xml">
                <tree string="Listado de Pesadas">
                    <field name="name" string="Ref"/>
                    <field name="winegrower_id"/>
                    <field name="grape_variety_id"/>
                    <field name="date"/>
                    <field name="net_weight" sum="Total Kilos"/>
                </tree>
            </field>
        </record>

        <record id="action_winery_weighing" model="ir.actions.act_window">
            <field name="name">Pesadas de Uva</field>
            <field name="res_model">winery.weighing</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                Registra la primera pesada
              </p>
            </field>
        </record>

        <menuitem id="menu_winery_root" 
                  name="Gestión Vitícola" 
                  sequence="10"/>
        
        <menuitem id="menu_winery_weighing" 
                  name="Pesadas" 
                  parent="menu_winery_root" 
                  action="action_winery_weighing" 
                  sequence="10"/>
    </data>
</odoo>